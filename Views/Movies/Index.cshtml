@using Vidly.Models
@*@model Vidly.ViewModels.MovieViewModel*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div class="btn btn-primary">
     @Html.ActionLink("Add Movie","New", "Movies")
</div>
@if (Model.Count == 0)
{
    <text>There is no movies.</text>
}

<table class="table table-bordered" table-hover>
    <thead>
        <tr><th>Movie</th><th>Genre</th></tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        {
        <tr>
            <td>@Html.ActionLink((string)movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
        }
    </tbody>
</table>
