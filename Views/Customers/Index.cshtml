@using Vidly.Models
@*@model Vidly.ViewModels*@
@*@model Vidly.ViewModels.CustomerViewModel*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
    @if (Model.Count == 0)
    {
        <text>We don't have any customers yet.</text>
    }


<table class="table table-bordered" table-hover>
    <thead>
        <tr><th>Customers</th><th>Membership Type</th></tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@Html.ActionLink((string)@customer.Name, "Edit", "Customers", new { id = @customer.id },null)</td>
            <td>@customer.MembershipType.Name</td>
        
        </tr>

        }
    </tbody>
</table>

